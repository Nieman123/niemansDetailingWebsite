rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isBlogAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid));
    }

    function validBlogWriteData(slug) {
      return request.resource.data.slug == slug
        && request.resource.data.authorUid == request.auth.uid
        && request.resource.data.title is string
        && request.resource.data.content is string
        && request.resource.data.excerpt is string
        && request.resource.data.status in ["draft", "published"];
    }

    // Quote leads are private. Allow only admin allowlist reads and updates.
    match /leads/{id} {
      allow read: if isBlogAdmin();
      allow update: if isBlogAdmin();
      allow delete: if isBlogAdmin();
      allow create: if false;
    }

    // Quote page funnel telemetry is private. Admins can read in dashboard.
    match /quotePageSessions/{id} {
      allow read: if isBlogAdmin();
      allow write: if false;
    }

    // Admin allowlist documents. Add uid as doc ID in Firebase console to grant blog access.
    match /adminUsers/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if false;
      allow create, update, delete: if false;
    }

    // Firestore-backed blog posts.
    match /blogPosts/{slug} {
      // Public can read published posts; admins can read all drafts and published posts.
      allow read: if isBlogAdmin() || resource.data.status == "published";

      // Writes restricted to allowlisted admins only.
      allow create: if isBlogAdmin() && validBlogWriteData(slug);
      allow update: if isBlogAdmin() && validBlogWriteData(slug);
      allow delete: if isBlogAdmin();
    }

    // Everything else: deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
